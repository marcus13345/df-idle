{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"outDir": "out",
		"declaration": true,
		"sourceMap": true,
		"paths": {
			"@theme": ["./src/ui/Theme"]
		}
	},
	"include": [
		"src/**/*.ts",
		"content/**/*.ts"
	]
}